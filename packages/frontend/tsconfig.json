{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@glut/admin-core": ["../core/src"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/",
    "node_modules/@glut/*/src/**/*.ts"
  ]
}
